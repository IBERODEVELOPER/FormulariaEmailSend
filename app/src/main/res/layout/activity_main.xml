<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para : "
        android:textColor="#0E0E0E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtemailreceptor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese email destino"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre / Asunto : "
        android:textColor="#0E0E0E"
        android:textSize="16sp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/edtasunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese nombre y/o asunto del mail"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="199dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulta :"
        android:textColor="#0E0E0E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtcuerpomail"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Ingrese mensaje al destinatario"
        android:inputType="textMultiLine"
        android:maxLines="20" />

    <Button
        android:id="@+id/btnenviarformulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DAE65100"
        android:onClick="FormularioMail"
        android:text="Enviar"
        android:textColor="#F6F1F1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnemailsimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#DF006064"

        android:onClick="MailSimple"
        android:text="Enviar Email Simple"
        android:textColor="#F6F0F0"
        android:textStyle="bold" />

</LinearLayout>